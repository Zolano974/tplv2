{# Item/Index #}

{% extends "FirstBundle:Layouts:layout.html.twig" %}

{% block title %}
    Item List
    
{% endblock  %}

{% block content %}

    <div class="row">
        
        <div class="col-md-12">
            <h2>

                Item List
            </h2>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            
{#            TABLEAU QUI LISTE TOUS LES ITEMS#}
            <div class="table-responsive table list">
                <table id="items_table" class="table table-striped table-bordered">
                    
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Number</th>
                            <th>Name</th>
                            <th>Field</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                        
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td class="col-md-1">
                                #{{ item.id }}
                            </td>     
                            <td class="col-md-1">
                                {{ item.number }} 
                            </td>     
                            <td class="col-md-6">
                                <b>{{ item.name }} </b>
                            </td>
                            <td class="col-md-3">
                                {{ item.field.name }}
                            </td>
                            <td>
{#                                <a href="{{ path('view_item', {'id': item.id }) }}">
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                </a>#}
                                <a href="{{ path('edit_item', {'id': item.id }) }}">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                                <a href="{{ path('delete_item', {'id': item.id }) }}">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>
                            </td>     
              
                        </tr>
                    {% else %}
                    {% endfor %}
                    </tbody>
                
                </table>
            </div>
            <div class="col-md-1 col-md-offset-11">
                <a href="{{ path('create_item') }}">
                    <button type="button" class="btn btn-custom">
                        <span class="glyphicon glyphicon-plus"></span>                            
                    </button>
                </a>
            </div>

                
            
        </div>
    </div>
{% endblock  %}

{% block js_scripts %}
       
{#    ON POSE UNE DATATABLE SUR LA LISTE#}

        <script type="text/javascript">
           $(document).ready(function(){
               $("#items_table").DataTable();
           });
        </script>   

{% endblock  %}
