{# Field/Create #}

{% extends "FirstBundle:Layouts:layout.html.twig" %}

{% block title %}
    
    {% if action == 'create'%}
        Create Field
    {% else %}
        Edit Field
    {% endif %}
    
    
{% endblock  %}

{% block content %}
<div class="container">
    <div class="row">
        
{#        TITRE DE LA PAGE#}

        <div class="col-md-12">
            <h2>
                {% if action == 'create'%}
                    Create Field
                {% else %}
                    Edit Field
                {% endif %}
    
            </h2>
        </div>

    </div>
    <div class="row">
        
        <div class="col-md-4 col-md-offset-2">
            
            
{#            FORMULAIRE D'AJOUT EDITION#}

            <form method="POST">
                <div class="row">
                    
                    <div class="form-group">
                        <div class="col-xs-6">
                            {{ form_label(form.name, "Field Name") }}
                            {{ form_errors(form.name)}}
                        </div>
                        <div class="col-xs-6">
                            {{ form_widget(form.name)}}
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-6">
                            {{ form_label(form.color, "Field Color") }}
                            {{ form_errors(form.color)}}
                        </div>
                        <div class="col-xs-6">
                            {{ form_widget(form.color)}}
                        </div>
                    </div>
                </div>
                        <hr>
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-6">
                            {{ form_label(form.workset, "Workset") }}
                            {{ form_errors(form.workset)}}
                        </div>
                        <div class="col-xs-6">
                            {{ form_widget(form.workset)}}
                        </div>
                    </div>
                </div>
                        <hr>
                {{ form_rest(form) }}  
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-6 col-xs-offset-6">

                            <input type="submit" class="btn btn-custom">
                        </div>
                    </div>                    
                </div>

           </form>
        </div>
                
{#        DIV DU COLORPICKER#}
        <div class="panel col-md-4">
            <div id="colorpicker"></div>  
        </div>

    </div>
</div>
{% endblock  %}

{% block js_scripts %}

{#    ACTIVATION DU COLORPICKER#}
    <script type="text/javascript">
        $(document).ready(function(){
            {% if action == 'create'%}
                $("#field_color").val("#999999");
            {% endif %}                        

            $("#colorpicker").farbtastic("#field_color");
        });
    </script>    
{% endblock  %}

