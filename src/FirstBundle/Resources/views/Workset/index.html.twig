{# Workset/Index #}

{% extends "FirstBundle:Layouts:layout.html.twig" %}

{% block title %}
    List Workset
    
{% endblock  %}

{% block content %}
<div class="container">
    <div class="row">
        
        <div class="col-md-12">
            <h2>

                List Workset
            </h2>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            
            <div class="table-responsive table list">
                
{#                LISTE DES WORKSET (TABLEAU)#}
                
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Generic</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                        
                    <tbody>
                    {% for workset in worksets %}
                        <tr>
                            <td class="col-md-1">
                                {{ workset.id }} - 
                            </td>     
                            <td class="col-md-3">
                                <a href="{{ path('work_workset', {'id': workset.id }) }}">
                                    <b>{{ workset.name }} </b>
                                </a>
                            </td>
                            <td class="col-md-1">
                                {% if workset.generic == 1 %}
                                    Oui
                                {% else %}
                                    Non
                                {% endif %}
                            </td>
                            <td class="col-md-5">
                                {{ workset.description }}
                            </td>
                            <td>
                                <a href="{{ path('view_workset', {'id': workset.id }) }}">
                                    <span class="glyphicon glyphicon-cog"></span>
                                </a>
                                <a href="{{ path('edit_workset', {'id': workset.id }) }}">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                                <a href="{{ path('delete_workset', {'id': workset.id }) }}">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>
                            </td>        
              
                        </tr>
                    {% else %}
                    {% endfor %}
                    </tbody>
                
                </table>
            </div>
            <div class="col-md-1 col-md-offset-11">
                <a href="{{ path('create_workset') }}">
                    <button type="button" class="btn btn-custom">
                        <span class="glyphicon glyphicon-plus"></span>                            
                    </button>
                </a>
            </div>
        </div>
    </div>
 </div>
    
{% endblock  %}
