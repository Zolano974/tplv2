{# Item/Create #}

{% extends "FirstBundle:Layouts:layout.html.twig" %}

{% block title %}
    
    {% if action == 'create'%}
        Create Item
    {% else %}
        Edit Item
    {% endif %}
    
    
{% endblock  %}

{% block content %}
<div class="container">
    <div class="row">
        
        <div class="col-md-12">
            <h2>
                {% if action == 'create'%}
                    Create Item
                {% else %}
                    Edit Item
                {% endif %}
    
            </h2>
        </div>

    </div>
    <div class="row">
        
        <div class="col-md-4 col-md-offset-2">
            
{#            FORM D'EDITION AJOUT D'ITEM#}
            <form method="POST">
                <div class="row">
                    
                    <div class="form-group">
                        <div class="col-xs-6">
                            {{ form_label(form.number, "Item NÂ°") }}
                            {{ form_errors(form.number)}}
                        </div>
                        <div class="col-xs-6">
                            {{ form_widget(form.number)}}
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    
                    <div class="form-group">
                        <div class="col-xs-6">
                            {{ form_label(form.name, "Item Name") }}
                            {{ form_errors(form.name)}}
                        </div>
                        <div class="col-xs-6">
                            {{ form_widget(form.name)}}
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-6">
                            {{ form_label(form.field, "Field") }}
                            {{ form_errors(form.field)}}
                        </div>
                        <div class="col-xs-6">
                            {{ form_widget(form.field)}}
                        </div>
                    </div>
                </div>
                        <hr>
                {{ form_rest(form) }}  
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-6 col-xs-offset-6">

                            <input type="submit" class="btn btn-custom" value="Add">
                        </div>
                    </div>                    
                </div>

           </form>
        </div>
    </div>

</div>
{% endblock  %}

