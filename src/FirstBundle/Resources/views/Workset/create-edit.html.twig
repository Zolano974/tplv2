{# Workset/Create #}

{% extends "FirstBundle:Layouts:layout.html.twig" %}

{% block title %}
    
    {% if action == 'create'%}
        Create Workset
    {% else %}
        Edit Workset
    {% endif %}
    
    
{% endblock  %}

{% block content %}

<div class="container">

    <div class="row">
        
        <div class="col-md-12">
            <h2>
                {% if action == 'create'%}
                    Create Workset
                {% else %}
                    Edit Workset
                {% endif %}
    
            </h2>
        </div>

    </div>
    <div class="row">
        
        <div class="col-md-4 col-md-offset-4">
            
{#            FORM EDITION AJOUT DE WORKSET#}
            
            <form method="POST">
                <div class="row">
                    
                    <div class="form-group">
                        <div class="col-xs-6">
                            {{ form_label(form.name, "Nom du Workset") }}
                            {{ form_errors(form.name)}}
                        </div>
                        <div class="col-xs-6">
                            {{ form_widget(form.name)}}
                        </div>
                    </div>
                </div>
                <hr>        
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-6">
                            {{ form_label(form.description, "Description du Workset") }}
                            {{ form_errors(form.description)}}
                        </div>
                        <div class="col-xs-6">
                            {{ form_widget(form.description)}}
                        </div>
                    </div>
                </div>
                <hr>                        
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-6">
                            {{ form_label(form.generic, "Générique ?") }}
                            {{ form_errors(form.generic)}}
                        </div>
                        <div class="col-xs-6">
                            {{ form_widget(form.generic)}}
                        </div>
                    </div>
                </div>
                                       <hr> 
                {{ form_rest(form) }} 
                <div class="row">
                    <div class="form-group">
                         <div class="col-xs-6 col-xs-offset-6">

                             <input type="submit" class="btn btn-custom">
                         </div>
                    </div>                    
                </div>
 
           </form>
        </div>

    </div>

</div>
{% endblock  %}

